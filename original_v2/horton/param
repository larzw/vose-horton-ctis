#define GX_DIM        17      // focal plane width <--- pixels
#define GY_DIM        17      // focal plane height <--- pixels
#define WVDIM  ((int)   1)     // # of wavelengths system matrix calibrated at
#define XDIM   ((int)   5)     // field stop width <--- pixels
#define YDIM   ((int)   5)     // field stop height <--- pixels
#define DX     ((int)    1)
#define DY     ((int)    1)
#define GX     ((int) 13)     // system matrix 'gap'















